# CounselFlow Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql://counselflow:counselflow_password@localhost:5432/counselflow

# Redis Configuration
REDIS_URL=redis://localhost:6379

# AI Service API Keys (Optional - for AI features)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GEMINI_API_KEY=your-google-gemini-api-key

# LangChain Configuration
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your-langchain-api-key

# File Upload Settings
UPLOAD_FOLDER=./uploads
MAX_UPLOAD_SIZE=52428800  # 50MB

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Security Settings
ENCRYPTION_KEY=your-encryption-key-32-characters

# Logging
LOG_LEVEL=INFO
LOG_FILE=counselflow.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Frontend Settings
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=CounselFlow
NEXT_PUBLIC_APP_VERSION=1.0.0
